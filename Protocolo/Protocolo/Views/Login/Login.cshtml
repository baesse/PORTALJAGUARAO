<body>


    <div class="row">


        <div class="col-md-4">
            
        </div>
        <div class="col-md-4">

        </div>

        <div class="col-md-4">

            <h4>Login</h4>
            @using (Html.BeginForm("Logar", "Login", FormMethod.Post))
            {
                <input type="text" placeholder="Usuario:" name="usuario" class="form-control" />
                <input type="password" placeholder="Senha" name="senha" class="form-control" />
                    <p>
                        <input type="submit" value="Logar" class="form-control" />
                        <label class="col-md-8">@ViewBag.Valor</label>
                    </p>

            }
        </div>
    </div>

</body>


